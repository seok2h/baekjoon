{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cl",
            "args": [
                "/Zi",
                "/EHsc",
                "/Fe:build\\${fileBasenameNoExtension}.exe",
                "/Fo:build\\",
                "/Fd:build\\",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}